{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2021",
      "strict": true,
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
      // "rootDir": "src"
    }
  },
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2021",
    "esModuleInterop": true,
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "bin",
    "strict": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "isolatedModules": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["mocha", "chai"]
    // "rootDir": "src"
  },
  "include": [
    "src/**/*",
    "on-chain-program/migrations/*",
    "on-chain-program/tests/*"
  ],
  "exclude": ["node_modules", "bin"]
}
